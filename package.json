{
  "name": "create-expo-nativewind",
  "version": "1.2.3",
  "author": "Prince Patel <patelprince.webdev@gmail.com>",
  "description": "A CLI tool to create Expo project with optional NativeWind setup",
  "main": "dist/index.js",
  "bin": {
    "create-expo-nativewind": "dist/index.js"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/__tests__/utils",
    "test:integration": "jest --testPathPattern=tests/__tests__/integration",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "expo",
    "nativewind",
    "tailwindcss",
    "react-native",
    "cli",
    "create-app"
  ],
  "homepage": "https://github.com/imprince26/create-expo-nativewind#readme",
  "bugs": {
    "url": "https://github.com/imprince26/create-expo-nativewind/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imprince26/create-expo-nativewind.git"
  },
  "license": "MIT",
  "type": "commonjs",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/figlet": "^1.7.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "execa": "^5.1.1",
    "figlet": "^1.9.4",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "jest": "^30.2.0",
    "log-update": "^7.0.2",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
